<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginchanged"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_marginHorizontal="135dp"
        android:textColorHint="@color/black"
        android:layout_marginTop="180dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="username"
            android:textSize="30sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="147dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="135dp"
            android:textColorHint="@color/black"
            android:layout_marginTop="15dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:hint="password" />
        </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buttongologin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:textSize="25sp"
        android:layout_marginTop="50dp"
        android:layout_marginHorizontal="165dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_marginTop="105dp"
        android:layout_marginHorizontal="58dp"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:text="Contact Us" />

    <Button
        android:id="@+id/button133242"
        android:layout_width="300dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="58dp"
        android:textSize="25sp"
        android:layout_height="wrap_content"
        android:text="Create Account" />

</LinearLayout>